<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="62dp">

    <Button
        android:id="@+id/imgGradeRed"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/marginTop"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_weight="1"
        android:background="@drawable/red_grade_bg"
        android:contentDescription="@string/redGradeName"/>

    <Button
        android:id="@+id/imgGradeOrange"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/marginTop"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_weight="1"
        android:background="@drawable/orange_grade_bg"
        android:contentDescription="@string/orangeGradeName"/>

    <Button
        android:id="@+id/imgGradeYellow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/marginTop"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_weight="1"
        android:background="@drawable/yellow_grade_bg"
        android:contentDescription="@string/yellowGradeName"/>

    <Button
        android:id="@+id/imgGradeGreen"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/marginTop"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_weight="1"
        android:background="@drawable/green_grade_bg"
        android:contentDescription="@string/greenGradeName"/>

    <Button
        android:id="@+id/imgGradeBlue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/marginTop"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_weight="1"
        android:background="@drawable/blue_grade_bg"
        android:contentDescription="@string/blueGradeName"/>

</LinearLayout>